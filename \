<script>
  const BASE_DIR = './images/5-22-2022';
  let images = [
    'IMG_20220522_102818_00_001.jpg',
    'IMG_20220522_122335_00_006.jpg',
    'IMG_20220522_144340_00_merged.jpg',
    'IMG_20220522_114901_00_003.jpg',
    'IMG_20220522_144010_00_merged.jpg',
  ];
  let gallery = $('#gallery');
  for (let i = 0; i < images.length; i++) {
    let row;
    if (i % 3 === 0) {
      gallery.append(
        $('<div></div>').addClass('text')
      );
    }
  }
  let viewer = pannellum.viewer('panorama', {
    type: 'equirectangular',
    panorama: './images/5-22-2022/IMG_20220522_102818_00_001.jpg',
    compass: true,
    preview: './images/5-22-2022/IMG_20220522_102818_00_001.jpg',
  });
  viewer.on('load', function () {
    viewer.toggleFullscreen();
  });
</script>
